<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvAcknowledgment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Questions on this app are directly translated from the 'Bible Quiz' app. The app can be accessed through the link below"
        android:layout_above="@+id/tvLinkBibleQuiz"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvLinkBibleQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_above="@id/tvByTitle"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvByTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Developed by:"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tvBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lifeline Technologies"
        android:textAlignment="center"
        android:layout_below="@+id/tvByTitle"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvLinkLifeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/tvBy"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>